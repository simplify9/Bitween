@page "/"
@inject NavigationManager navigationManager

<h3>Dashboard</h3>

<Search PageSize="10" SearchUrl="xchanges" TModel="XchangeRow" OnItem="@(item => navigationManager.NavigateTo($"admin/carriers/{item.Item.Id}"))"
        Height="400px" Width="max-content">
    <Commands>
        <a href="submit">New exchange</a>
    </Commands>

    <Columns>
        <Field Name="@nameof(XchangeRow.Id)"></Field>
        <Field Name="@nameof(XchangeRow.DocumentName)" />
        <Field Name="@nameof(XchangeRow.SubscriptionName)" />
        <Field Name="@nameof(XchangeRow.StartedOn)" />
        <Field Name="@nameof(XchangeRow.FinishedOn)" />
        <Field Name="@nameof(XchangeRow.Status)" />

    </Columns>

</Search>

