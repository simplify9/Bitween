@page "/subscriptions"
@inject NavigationManager navigationManager
@inject ScopedState state

<h3>Subscription Search</h3>

<Search PageSize="10" SearchUrl="subscriptions" TModel="SubscriptionSearch" OnItem="@(item => navigationManager.NavigateTo($"subscriptions/{item.Item.Id}"))"
        @bind-Value="state[navigationManager.Uri]">
    <Commands>
        <a href="subscriptions/create">New subscription</a>
    </Commands>
     <Filters>
         <Field Name="Name"/>
     </Filters>

    <Columns>
        <Field Name="Id"></Field>
        <Field Name="@nameof(SubscriptionSearch.Name)" />
        <Field Name="@nameof(SubscriptionSearch.Type)" />
        <Field Name="@nameof(SubscriptionSearch.IsRunning)" />
        <Field Name="@nameof(SubscriptionSearch.Inactive)" />
    </Columns>

</Search>

